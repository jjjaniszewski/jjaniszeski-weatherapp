root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,vb}]
# XML documentation comments
csharp_space_after_xml_comment_start = false

# Braces settings
csharp_prefer_braces = true:warning

# Enforce braces on single line statements
resharper_braces_for_ifelse = required
resharper_braces_for_for = required
resharper_braces_for_foreach = required
resharper_braces_for_while = required
resharper_braces_for_dowhile = required
resharper_braces_for_using = required
resharper_braces_for_lock = required
resharper_braces_for_fixed = required

# XML documentation alignment
resharper_xmldoc_indent_text = remove_indent 